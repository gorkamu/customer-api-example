{
  "name": "customer-api",
  "version": "1.0.0",
  "author": "Gorkamu <exercism.org.subscribe765@passmail.net>",
  "description": "DDD API Rest for customer management (Example)",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest --config tests/jest-config.json --runInBand --detectOpenHandles --forceExit --verbose",
    "test:cov": "jest --coverage --coveragePathIgnorePatterns=coverage/lcov-report",
    "test:cov:json": "jest --runInBand --detectOpenHandles --forceExit --coverage --coveragePathIgnorePatterns=coverage/lcov-report --coverageReporters=json-summary",
    "tag": "git tag v$(node -pe \"require('./package.json').version\") && git push --tags --no-verify",
    "version_patch": "npm --no-git-tag-version version patch",
    "version_minor": "npm --no-git-tag-version version minor",
    "version_major": "npm --no-git-tag-version version major"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-query-parser": "^1.3.3",
    "http-status-codes": "^2.3.0",
    "mongodb": "^6.11.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>"
    ]
  }
}
